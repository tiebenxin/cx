<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_13radius_solid_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <com.contrarywind.view.WheelView
            android:id="@+id/wheel_province"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="1" />

        <com.contrarywind.view.WheelView
            android:id="@+id/wheel_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/line_one"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/c_828282"
            android:textSize="16sp" />

        <View
            android:id="@+id/line_two"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/line_one"
            android:layout_toRightOf="@+id/tv_cancel"
            android:background="@color/c_f0f0f0" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/line_one"
            android:layout_toRightOf="@+id/line_two"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/c_32b053"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>
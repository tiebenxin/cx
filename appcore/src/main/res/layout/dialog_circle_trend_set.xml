<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_30_30_0_0_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/tv_istop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_circle_istop"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="置顶"
            android:textColor="@color/color_3A3"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_auth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_circle_auth"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="权限"
            android:textColor="@color/color_3A3"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_circle_delete"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/color_3A3"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_f4f" />

    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_item_click_select"
        android:clickable="true"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_222"
        android:textSize="16sp" />
</LinearLayout>
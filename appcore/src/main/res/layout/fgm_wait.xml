<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/app_margin_main">

    <TextView
        android:id="@+id/txt_title"
        style="@style/app_txt_title_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xxx"
        android:layout_marginBottom="@dimen/app_margin_item" />

    <ProgressBar
        android:id="@+id/progress_num"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:visibility="visible" />

    <net.cb.cb.library.view.WaitView
        android:id="@+id/view_net"
        app:waitview_state="true"
        android:layout_width="250dp"
        android:layout_height="80dp" />

</LinearLayout>
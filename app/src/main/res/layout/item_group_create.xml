<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_type"
            style="@style/app_txt_title_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/app_margin_main"
            android:paddingTop="1dp"
            android:paddingRight="@dimen/app_margin_main"
            android:paddingBottom="1dp"
            android:visibility="visible"
            android:text="xxx" />

        <TextView
            android:id="@+id/txt_admin"
            style="@style/app_txt_title_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/app_margin_main"
            android:textSize="10sp"
            android:textColor="@color/color_808"
            android:paddingTop="1dp"
            android:paddingRight="@dimen/app_margin_main"
            android:paddingBottom="1dp"
            android:visibility="gone"
            android:text="xx" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_root"
        android:paddingRight="0dp"
        style="@style/app_layout_list1_item">

        <FrameLayout
            android:layout_width="47dp"
            android:layout_height="47dp">
                    <android.support.v7.widget.CardView
                        style="@style/head_portrait_style"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="@dimen/head_portrait_fillet">
                        <ImageView
                            android:id="@+id/img_head"
                            style="@style/app_img_head"
                            android:layout_marginRight="@dimen/app_margin_item"/>
                    </android.support.v7.widget.CardView>
                 <TextView
                    android:id="@+id/txt_lable"
                    android:layout_width="28dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right"
                    android:background="@drawable/shape_circle_head_yellow"
                    android:text="群主"
                    android:gravity="center"
                     android:elevation="2dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size8"
                    android:visibility="gone" />
        </FrameLayout>
        <LinearLayout
            style="@style/app_layout_list1">

            <LinearLayout
                android:paddingRight="@dimen/app_margin_main"
                android:layout_height="67dp"
                style="@style/app_layout_list1_item">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_marginRight="@dimen/app_margin_item"
                        style="@style/app_txt_title_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="xxxx" />

                    <CheckBox
                        android:id="@+id/ck_select"
                        style="@style/app_check_green"
                        android:layout_width="wrap_content"
                        android:visibility="visible"
                        android:layout_height="wrap_content"
                        android:padding="10dp"/>
                    <ImageView
                        android:id="@+id/iv_select"
                        android:layout_width="wrap_content"
                        android:src="@drawable/bg_cheack_green_e"
                        android:visibility="gone"
                        android:paddingLeft="10dp"
                        android:paddingRight="17dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:id="@+id/view_line"
                style="@style/app_line"
                android:layout_marginLeft="@dimen/app_margin_main"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
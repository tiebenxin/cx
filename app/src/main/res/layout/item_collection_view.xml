<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layout_view"
        style="@style/app_layout_list2_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_chat_bg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/img_chat_at_all" />
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size14"
                android:textColor="@color/gray_250"
                android:singleLine="true"
                android:layout_marginLeft="20dp"
                android:text="小华"/>
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size14"
                android:textColor="@color/gray_250"
                android:layout_marginLeft="20dp"
                android:text="今天"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                 <!--文字-->
                <TextView
                    android:id="@+id/txt_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_300"
                    android:visibility="gone"
                    android:text="123456"
                    android:textSize="@dimen/font_size12"/>
                <!--语音-->
                <com.yanlong.im.chat.ui.view.VoiceView
                    android:id="@+id/voice_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                 <!--图片-->
                <RelativeLayout
                    android:id="@+id/layout_img"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_content"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/animation_emoti_000"
                        android:visibility="visible"/>
                    <ImageView
                        android:id="@+id/img_play"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/video_msg_play_show"
                        android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</layout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_ot_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_chat_other"
            android:gravity="left|center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_voice_l" />

            <TextView
                android:id="@+id/txt_ot_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"

                android:text="66''"
                android:textColor="@color/black"

                android:textSize="15sp" />
            <View
                android:id="@+id/view_ot_p"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/view_me_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">


        <LinearLayout


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_me"

            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">
          <View
                android:id="@+id/view_me_p"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/txt_me_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"

                android:text="66''"
                android:textColor="@color/black"

                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_voice_r" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout  android:layout_marginTop="@dimen/app_margin_item_top"
        android:id="@+id/view_tag_fried"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <View style="@style/app_line" />
        <TextView
            android:paddingLeft="@dimen/app_margin_item"
            style="@style/app_txt_content_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:text="联系人" />

        <View style="@style/app_line" />

    </LinearLayout>
    <LinearLayout android:layout_marginTop="@dimen/app_margin_item_top"
        android:id="@+id/view_tag_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/app_line" />
        <TextView
            android:paddingLeft="@dimen/app_margin_item"
            style="@style/app_txt_content_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:text="群聊" />

        <View style="@style/app_line" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_it"
        style="@style/app_layout_list1">

        <LinearLayout style="@style/app_layout_list1_item">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/app_margin_item">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img_head"
                    style="@style/app_img_head"
                    android:layout_gravity="center|left" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_margin_item"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name"
                    style="@style/app_txt_title_2"

                    android:text="xxxx" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <View style="@style/app_line" />
</LinearLayout>
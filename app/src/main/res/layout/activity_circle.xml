<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".circle.CircleFragment">

        <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广场动态"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_title"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="50dp">

                <RadioButton
                    android:id="@+id/rb_recommend"
                    style="@style/circle_radiobutton_style"
                    android:checked="true"
                    android:text="推荐"
                    android:textColor="@color/circle_follow_color"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_recommend"
                    style="@style/circle_red_dot_style" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="65dp">

                <RadioButton
                    android:id="@+id/rb_follow"
                    style="@style/circle_radiobutton_style"
                    android:text="关注"
                    android:textColor="@color/circle_follow_color" />

                <ImageView
                    android:id="@+id/iv_follow"
                    style="@style/circle_red_dot_style" />
            </RelativeLayout>
        </RadioGroup>

        <View
            android:id="@+id/view_line"
            style="@style/app_line"
            android:layout_below="@id/group_title" />

        <LinearLayout
            android:id="@+id/layout_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_16radius_solid_999999"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/view_line"
            android:visibility="visible"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <com.hm.cxpay.widget.CircleImageView
                android:id="@+id/iv_notice_avatar"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@mipmap/ic_info_head" />
            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="0条新消息"
                android:textSize="15sp"
                android:textColor="@color/white" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_white_arrow"/>
        </LinearLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_notice" />

        <ImageView
            android:id="@+id/iv_create_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:src="@mipmap/ic_circle_create" />
    </RelativeLayout>
</layout>
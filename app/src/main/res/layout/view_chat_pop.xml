<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <RelativeLayout
        android:id="@+id/rl_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
              <ImageView
                android:id="@+id/img_triangle_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/triangle_up"
                android:visibility="gone" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_bubble"
        android:layout_width="wrap_content"
        android:layout_below="@id/rl_up"
        android:background="@drawable/shape_chat_bubble_bg"
        android:paddingBottom="13dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rl_down"
        android:layout_width="wrap_content"
        android:layout_below="@+id/recycler_bubble"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_triangle_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/triangle_down"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <net.cb.cb.library.view.ActionbarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:actionbar_showIconLeft="false"
        app:actionbar_txtTitle="我" />

    <LinearLayout style="@style/app_layout_list1">

        <LinearLayout
            android:id="@+id/view_head"
            style="@style/app_layout_list1_item"
            android:layout_height="89dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_head"
                style="@style/app_img_head"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_marginRight="@dimen/app_margin_item" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name"
                    style="@style/app_txt_title_2"
                    android:text="xxx"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_marginTop="5dp"
                    style="@style/app_txt_content_1"
                    android:text="info"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_btn_goto" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/app_layout_list2">

        <LinearLayout style="@style/app_layout_list2_item" android:id="@+id/view_qr">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_margin_item"
                android:src="@mipmap/ic_my_qr" />

            <TextView
                style="@style/app_txt_title_2"
                android:layout_marginRight="@dimen/app_margin_item"
                android:layout_weight="1"
                android:text="我的二维码" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_btn_goto" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout style="@style/app_layout_list2">

        <LinearLayout style="@style/app_layout_list2_item" android:id="@+id/view_money">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_margin_item"
                android:src="@mipmap/ic_my_money" />

            <TextView
                style="@style/app_txt_title_2"
                android:layout_marginRight="@dimen/app_margin_item"
                android:layout_weight="1"
                android:text="零钱" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_btn_goto" />
        </LinearLayout>

        <LinearLayout style="@style/app_layout_list2_item" android:id="@+id/view_wallet">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_margin_item"
                android:src="@mipmap/ic_my_wd" />

            <TextView
                style="@style/app_txt_title_2"
                android:layout_marginRight="@dimen/app_margin_item"
                android:layout_weight="1"
                android:text="第三方钱包" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_btn_goto" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout style="@style/app_layout_list2">

        <LinearLayout style="@style/app_layout_list2_item" android:id="@+id/view_collection">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_margin_item"
                android:src="@mipmap/ic_my_coll" />

            <TextView
                style="@style/app_txt_title_2"
                android:layout_marginRight="@dimen/app_margin_item"
                android:layout_weight="1"
                android:text="收藏" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_btn_goto" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout style="@style/app_layout_list2">

        <LinearLayout style="@style/app_layout_list2_item" android:id="@+id/view_setting">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_margin_item"
                android:src="@mipmap/ic_my_setting" />

            <TextView
                style="@style/app_txt_title_2"
                android:layout_marginRight="@dimen/app_margin_item"
                android:layout_weight="1"
                android:text="设置" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_btn_goto" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_type"
            style="@style/app_txt_title_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/app_margin_main"
            android:paddingTop="1dp"
            android:paddingRight="@dimen/app_margin_main"
            android:paddingBottom="1dp"
            android:text="xxx" />

        <View style="@style/app_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_messge"
        android:layout_width="match_parent"
        android:text="最近7天"
        android:textSize="14sp"
        android:textColor="@color/c_517da2"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="3dp"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/layout_root"
        style="@style/app_layout_list1">

        <LinearLayout style="@style/app_layout_list1_item">
            <androidx.cardview.widget.CardView
                style="@style/head_portrait_style"
                android:layout_marginRight="@dimen/app_margin_item"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/head_portrait_fillet">
                    <ImageView
                        android:id="@+id/img_head"
                        style="@style/app_img_head" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_margin_item"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name"
                    style="@style/app_txt_title_2"
                    android:text="xxxx" />

                <TextView
                    android:id="@+id/txt_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/app_txt_content_1"
                    tool:text="11111"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_add"
                style="@style/app_btn_green_s"
                android:layout_marginRight="10dp"
                android:text="添加" />

        </LinearLayout>
    </LinearLayout>

    <View style="@style/app_line" />
</LinearLayout>
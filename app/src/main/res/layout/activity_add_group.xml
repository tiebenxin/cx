<?xml version="1.0" encoding="utf-8"?>
<net.cb.cb.library.view.HeadView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:headview_title="加入群聊">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    style="@style/head_portrait_style"
                    android:layout_marginTop="45dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="50dp">
                        <ImageView
                            android:id="@+id/sd_group_head"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            style="@style/app_img_head"/>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/tv_group_name"
                    style="@style/app_txt_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"/>

                <TextView
                    android:id="@+id/tv_group_num"
                    style="@style/app_txt_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_temp_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_temp_three"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"
                android:textColor="@color/c_000000"
                android:textSize="13sp"
                android:text="介绍信息："/>

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:minHeight="100dp"
                android:text=""
                android:textSize="13sp"
                android:padding="8dp"
                android:maxLength="60"
                android:gravity="top"
                android:background="@drawable/shape_5radius_white"
                android:layout_below="@+id/tv_temp_two"/>


            <Button
                android:id="@+id/btn_add_group"
                style="@style/app_btn_green"
                android:layout_gravity="center_horizontal"
                android:layout_width="310dp"
                android:layout_height="38dp"
                android:layout_marginTop="30dp"
                android:textSize="15sp"
                android:text="加入群聊" />

        </LinearLayout>
    </ScrollView>

</net.cb.cb.library.view.HeadView>
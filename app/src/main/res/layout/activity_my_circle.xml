<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <net.cb.cb.library.view.HeadView
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headview_title="我的动态">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="210dp">

                <ImageView
                    android:id="@+id/iv_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <com.hm.cxpay.widget.CircleImageView
                    android:id="@+id/iv_header"
                    style="@style/app_img_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_header"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="用户名"
                    android:textColor="@color/c_363636"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_imid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="常信号"
                    android:textColor="@color/c_868686"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view_one"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/tv_imid"
                    android:layout_marginTop="28dp"
                    android:background="@color/c_e6e6e6" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="73.5dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/layout_my_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_my_follow_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/c_343434"
                        android:textSize="21sp" />

                    <TextView
                        android:id="@+id/tv_my_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:textColor="@color/c_868686"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view_two"
                    android:layout_width="0.5dp"
                    android:layout_height="38dp"
                    android:background="@color/c_e6e6e6" />

                <LinearLayout
                    android:id="@+id/layout_follow_me"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_follow_me_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/c_343434"
                        android:textSize="21sp" />

                    <TextView
                        android:id="@+id/tv_follow_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="被关注"
                        android:textColor="@color/c_868686"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view_three"
                    android:layout_width="0.5dp"
                    android:layout_height="38dp"
                    android:background="@color/c_e6e6e6" />

                <LinearLayout
                    android:id="@+id/layout_who_see_me"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_who_see_me_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/c_343434"
                        android:textSize="21sp" />

                    <TextView
                        android:id="@+id/tv_who_see_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="看过我"
                        android:textColor="@color/c_868686"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:visibility="gone" />
            </android.support.v4.widget.SwipeRefreshLayout>
            <include
                android:id="@+id/no_data_layout"
                layout="@layout/layout_no_data"
                android:visibility="visible" />
        </LinearLayout>
    </net.cb.cb.library.view.HeadView>
</layout>
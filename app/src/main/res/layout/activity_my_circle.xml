<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <net.cb.cb.library.view.HeadView
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headview_title="我的动态">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.hm.cxpay.widget.CircleImageView
                    android:id="@+id/iv_header"
                    style="@style/app_img_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:textSize="18sp"
                    android:text="用户名"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/iv_header"
                    android:textColor="@color/c_363636"/>

                <TextView
                    android:id="@+id/tv_imid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/c_868686"
                    android:textSize="14sp"
                    android:text="常信号"/>

                <View
                    android:id="@+id/view_one"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/tv_imid"
                    android:layout_marginTop="28dp"
                    android:background="@color/c_e6e6e6"/>
                <LinearLayout
                    android:layout_below="@+id/view_one"
                    android:layout_width="match_parent"
                    android:layout_height="73.5dp">
                    <LinearLayout
                        android:id="@+id/layout_i_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="21sp"
                            android:textColor="@color/c_343434"
                            android:text="0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/c_868686"
                        android:text="0"/>

                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <include
                android:id="@+id/no_data_layout"
                layout="@layout/layout_no_data"
                android:visibility="gone" />
        </LinearLayout>
    </net.cb.cb.library.view.HeadView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <net.cb.cb.library.view.HeadView
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:headview_title="安全中心">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/view_setting_psw_of_login"
                style="@style/app_layout_list2_item">


                <TextView
                    style="@style/app_txt_title_2"
                    android:layout_marginRight="@dimen/app_margin_item"
                    android:layout_weight="1"
                    android:text="设置登录密码" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:src="@mipmap/ic_btn_goto" />
            </LinearLayout>

            <View style="@style/app_line" />

            <LinearLayout
                android:id="@+id/view_setting_psw_of_pay"
                style="@style/app_layout_list2_item">


                <TextView
                    style="@style/app_txt_title_2"
                    android:layout_marginRight="@dimen/app_margin_item"
                    android:layout_weight="1"
                    android:text="设置支付密码" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:src="@mipmap/ic_btn_goto" />
            </LinearLayout>

            <View style="@style/app_line" />

            <LinearLayout
                android:id="@+id/view_find_psw_of_pay"
                style="@style/app_layout_list2_item">


                <TextView
                    style="@style/app_txt_title_2"
                    android:layout_marginRight="@dimen/app_margin_item"
                    android:layout_weight="1"
                    android:text="找回支付密码" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:src="@mipmap/ic_btn_goto" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/view_manager_device"
                style="@style/app_layout_list2_item"
                android:layout_marginTop="20dp">

                <TextView
                    style="@style/app_txt_title_2"
                    android:layout_marginRight="@dimen/app_margin_item"
                    android:layout_weight="1"
                    android:text="登录设备管理" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:src="@mipmap/ic_btn_goto" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/view_freeze_account"
                style="@style/app_layout_list2_item"
                android:layout_marginTop="40dp">

                <TextView
                    style="@style/app_txt_title_2"
                    android:layout_marginRight="@dimen/app_margin_item"
                    android:layout_weight="1"
                    android:text="冻结账号" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:src="@mipmap/ic_btn_goto" />
            </LinearLayout>


            <View style="@style/app_line" />

            <LinearLayout
                android:id="@+id/view_appeal_account"
                style="@style/app_layout_list2_item">

                <TextView
                    style="@style/app_txt_title_2"
                    android:layout_marginRight="@dimen/app_margin_item"
                    android:layout_weight="1"
                    android:text="账号申诉" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:src="@mipmap/ic_btn_goto" />
            </LinearLayout>


            <View style="@style/app_line" />

            <LinearLayout
                android:id="@+id/view_logout_account"
                style="@style/app_layout_list2_item">

                <TextView
                    style="@style/app_txt_title_2"
                    android:layout_marginRight="@dimen/app_margin_item"
                    android:layout_weight="1"
                    android:text="注销账号" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:src="@mipmap/ic_btn_goto" />
            </LinearLayout>


        </LinearLayout>

    </net.cb.cb.library.view.HeadView>
</layout>
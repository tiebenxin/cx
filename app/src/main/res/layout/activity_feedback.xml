<?xml version="1.0" encoding="utf-8"?>
<net.cb.cb.library.view.HeadView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:id="@+id/headView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:headview_title="意见反馈">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            style="@style/app_txt_title_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题描叙:" />

        <EditText
            android:id="@+id/ed_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edt1"
            android:gravity="top"
            android:hint="请描述您需要反馈的意见或者问题"
            android:maxLength="300"
            android:padding="5dp"
            android:textSize="16sp" />


        <TextView
            style="@style/app_txt_title_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="截图:" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            app:placeholderImage="@mipmap/ic_img_def" />

        <Button
            android:id="@+id/btn_commit"
            style="@style/app_btn_green"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:text="提交" />
    </LinearLayout>
</net.cb.cb.library.view.HeadView>
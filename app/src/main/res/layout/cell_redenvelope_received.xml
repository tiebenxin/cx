<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/app_margin_main"
    android:paddingTop="5dp"
    android:paddingRight="@dimen/app_margin_main"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/tv_time"
        style="@style/app_txt_content_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="shijian" />

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.yanlong.im.wight.avatar.RoundImageView
            app:radius="3dp"
            android:id="@+id/iv_avatar"
            style="@style/app_img_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/app_txt_content_1"
                android:layout_width="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="left"
                android:text="name" />

            <FrameLayout
                android:id="@+id/view_bubble_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/view_bubble"
                    android:layout_width="200dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_chat_other_rp"
                    android:gravity="left|center_vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <ImageView
                            android:id="@+id/iv_rb_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_rb_zfb_n" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/app_margin_item"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_rb_title"
                                style="@style/app_txt_title_2"
                                android:text="恭喜发财，大吉大利"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tv_rb_info"
                                style="@style/app_txt_content_1"
                                android:layout_marginTop="5dp"
                                android:text="标题"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/tv_rb_type"
                            style="@style/app_txt_content_1"
                            android:layout_width="180dp"
                            android:layout_weight="1"
                            android:text="支付宝红包" />

                        <ImageView
                            android:id="@+id/iv_rb_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_rb_zfb" />

                    </LinearLayout>

                </LinearLayout>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_bell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:src="@mipmap/icon_st_1"
                    android:visibility="visible" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
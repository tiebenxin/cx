<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/app_margin_main"
    android:paddingTop="5dp"
    android:paddingRight="@dimen/app_margin_main"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/tv_time"
        style="@style/app_txt_content_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="shijian" />

    <!--  <TextView
          android:id="@+id/tv_broadcast"
          style="@style/app_txt_title_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:background="@drawable/bg_time"
          android:gravity="center"
          android:singleLine="false"
          android:text="公告"
          android:textColor="@color/white" />-->

    <RelativeLayout
        android:id="@+id/view_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_avatar"
            style="@style/app_img_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/app_txt_content_1"
                android:layout_width="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="right"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_error"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/ic_net_err"
                    android:visibility="visible" />

                <FrameLayout
                    android:id="@+id/view_bubble_root"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_bubble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/selector_chat_me_touch"
                        android:gravity="right|center_vertical"
                        android:visibility="visible">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="normal"
                            android:gravity="center_vertical"
                            android:maxWidth="210dp"
                            android:minHeight="30dp"
                            android:selectAllOnFocus="true"
                            android:text=""
                            android:textColor="@color/black"
                            android:textIsSelectable="false"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_bell"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="left|bottom"
                        android:src="@mipmap/icon_st_1"
                        android:visibility="visible" />

                </FrameLayout>
            </LinearLayout>


        </LinearLayout>

        <CheckBox
            android:id="@+id/ck_select"
            style="@style/app_check_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:visibility="visible" />


    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhaoss.weixinrecorded.test" >

    <uses-sdk
        android:minSdkVersion="22"
        android:targetSdkVersion="28" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.zhaoss.weixinrecorded.test"
        android:targetPackage="com.zhaoss.weixinrecorded.test" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:supportsRtl="true" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.zhaoss.weixinrecorded.activity.RecordedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zhaoss.weixinrecorded.activity.RecordedLocalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zhaoss.weixinrecorded.activity.EditVideoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|adjustPan" />
        <activity
            android:name="com.zhaoss.weixinrecorded.activity.CutSizeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zhaoss.weixinrecorded.activity.CutTimeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zhaoss.weixinrecorded.activity.ImageShowActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zhaoss.weixinrecorded.activity.VideoPreviewActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
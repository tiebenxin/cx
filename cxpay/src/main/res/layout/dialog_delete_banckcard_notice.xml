<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_13radius_solid_ffffff">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="24dp"
        android:text="如果存在未结算的交易，24小时之内将\n无法绑定新的银行卡，确定继续解绑银\n行卡？"
        android:textColor="@color/c_000000"
        android:textSize="14sp" />

    <View
        android:id="@+id/line_one"
        style="@style/payword_line"
        android:layout_below="@+id/tv_title" />


    <LinearLayout
        android:layout_below="@+id/line_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_below="@+id/line_one"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/c_828282"
            android:textSize="16sp" />

        <View
            android:id="@+id/line_two"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_below="@+id/line_one"
            android:layout_toRightOf="@+id/tv_cancle"
            android:background="@color/c_f0f0f0" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_below="@+id/line_one"
            android:layout_toRightOf="@+id/line_two"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/c_32b053"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
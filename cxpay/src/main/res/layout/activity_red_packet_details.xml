<?xml version="1.0" encoding="utf-8"?>
<net.cb.cb.library.view.HeadView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:headview_title="零钱红包">

    <!--    <net.cb.cb.library.view.ActionbarView-->
    <!--        android:id="@+id/action_bar"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:background="@color/red_200"-->
    <!--        app:actionbar_txtTitle="支付宝红包" />-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_red_packet" />

        <ImageView
            android:id="@+id/sd_image_head"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_user_name"
            style="@style/app_txt_title_2"
            android:layout_marginTop="20dp"
            android:text="某某的红包"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sd_image_head" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/app_txt_content_1"
            android:layout_marginTop="12dp"
            android:text="恭喜发财,红包拿来"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_user_name" />

        <TextView
            android:id="@+id/tv_money"
            style="@style/app_txt_title_2"
            android:layout_marginTop="20dp"
            android:layout_marginRight="9dp"
            android:text="88.88"
            android:textSize="46sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_content" />

        <TextView
            android:id="@+id/tv_unit"
            style="@style/app_txt_title_2"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="元"
            app:layout_constraintBottom_toBottomOf="@id/tv_money"
            app:layout_constraintLeft_toRightOf="@id/tv_money" />

        <TextView
            style="@style/app_txt_content_1"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="19sp"
            android:text="已存入零钱,可直接转账"
            android:textColor="@color/blue_600"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_money" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hint"
            style="@style/app_txt_content_1"
            android:layout_marginLeft="@dimen/app_margin_item"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="已领取1/2个,共88.88/88.88元" />

        <net.cb.cb.library.view.MultiListView
            android:id="@+id/mtListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</net.cb.cb.library.view.HeadView>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <net.cb.cb.library.view.HeadView
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headview_title="账户信息">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/app_layout_list2_item">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/c_0f0f0f"
                    android:text="姓名" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/c_868686"
                    android:text="" />

            </LinearLayout>

            <View style="@style/money_change_line" />

            <LinearLayout
                android:id="@+id/ll_identity_card"
                style="@style/app_layout_list2_item">

                <TextView
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/c_0f0f0f"
                    android:layout_width="80dp"
                    android:text="身份证号" />

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/c_868686"
                    android:layout_weight="1" />


            </LinearLayout>
            <View style="@style/money_change_line" />
        </LinearLayout>


    </net.cb.cb.library.view.HeadView>
</layout>
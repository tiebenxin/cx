<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <net.cb.cb.library.view.toolbar.CXToolbar
        android:id="@+id/viewTitleBar"
        style="@style/FGToolbarStyleWithNoOverflow" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="189dp"
            android:background="@mipmap/bg_loose_change">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawableLeft="@mipmap/ic_loose_change"
                android:drawablePadding="6dp"
                android:text="账户余额"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="$ 500.00"
                android:textColor="@color/white"
                android:textSize="27sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <Button
                android:id="@+id/btn_voucher"
                style="@style/app_btn_white_radius"
                android:layout_width="145dp"
                android:layout_height="39dp"
                android:layout_marginLeft="@dimen/app_margin_main"
                android:layout_marginTop="20dp"
                android:drawableLeft="@mipmap/ic_recharge"
                android:gravity="center"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:text="充值"
                android:textColor="@color/green_100"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_money" />


            <Button
                android:id="@+id/btn_withdraw_deposit"
                style="@style/app_btn_white_radius"
                android:layout_width="145dp"
                android:layout_height="39dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/app_margin_main"
                android:drawableLeft="@mipmap/ic_withdraw_deposit"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:text="提现"
                android:textColor="@color/green_100"
                android:textSize="16sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_money" />

        </android.support.constraint.ConstraintLayout>


        <LinearLayout
            android:id="@+id/view_loose_change_info"
            style="@style/app_layout_list2_item"
            android:layout_marginTop="@dimen/app_margin_item_top">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_margin_item"
                android:src="@mipmap/ic_loose_change_info" />

            <TextView
                style="@style/app_txt_title_2"
                android:layout_marginRight="@dimen/app_margin_item"
                android:layout_weight="1"
                android:text="零钱明细" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_btn_goto" />
        </LinearLayout>

        <View style="@style/app_line" />

        <LinearLayout
            android:id="@+id/view_red_packet_info"
            style="@style/app_layout_list2_item">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_margin_item"
                android:src="@mipmap/ic_red_packet_info" />

            <TextView
                style="@style/app_txt_title_2"
                android:layout_marginRight="@dimen/app_margin_item"
                android:layout_weight="1"
                android:text="红包明细" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_btn_goto" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/view_bank_card"
            style="@style/app_layout_list2_item"
            android:layout_marginTop="@dimen/app_margin_item_top">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_margin_item"
                android:src="@mipmap/ic_bank_card" />

            <TextView
                style="@style/app_txt_title_2"
                android:layout_marginRight="@dimen/app_margin_item"
                android:layout_weight="1"
                android:text="我的银行卡" />

            <TextView
                android:id="@+id/tv_bank_card_num"
                style="@style/app_txt_content_1"
                android:layout_marginRight="@dimen/app_margin_item"
                android:text="0张"
                android:textSize="15sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_btn_goto" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_pay_manage"
            style="@style/app_layout_list2_item"
            android:layout_marginTop="@dimen/app_margin_item_top">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_margin_item"
                android:src="@mipmap/ic_pay_manage" />

            <TextView
                style="@style/app_txt_title_2"
                android:layout_marginRight="@dimen/app_margin_item"
                android:layout_weight="1"
                android:text="支付管理" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_btn_goto" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>























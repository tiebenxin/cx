<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_root"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/jrmf_b_title_bar_color"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_bankCardLogo"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="@dimen/dimen_16"
        android:src="@drawable/jrmf_e_ic_card" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_8"
        android:layout_marginRight="@dimen/dimen_8"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bankCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/jrmf_b_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_bankCardNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/jrmf_b_white"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginRight="@dimen/btn_radius"
        android:background="@drawable/jrmf_e_shape_unbind"
        android:gravity="center"
        android:text="详情"
        android:textColor="@color/jrmf_b_white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_unbind"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginRight="@dimen/dimen_16"
        android:background="@drawable/jrmf_e_shape_unbind"
        android:gravity="center"
        android:text="解绑"
        android:textColor="@color/jrmf_b_white"
        android:textSize="14sp" />


</LinearLayout>








